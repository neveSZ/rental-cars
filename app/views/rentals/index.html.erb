<% if @rentals.any? %>
    <% @rentals.each do |rental| %>
        <%= link_to "#{l rental.start_date} - #{l rental.end_date}", rental %>
    <% end %>
<% else %>
    <%= 'Nenhuma locação agendada' %>
<% end %>

<%= link_to 'Agendar nova locação', new_rental_path %>

<%= form_with url: search_rentals_path, local: true, method: :get do |f| %>
    <%= f.label :q, 'Busca de locação' %>
    <%= f.text_field :q %>
    <%= f.submit 'Buscar' %>
<% end %>

<% if @rentals.any? %>
    <%= render @rentals %>
<% else %>
    <%= 'Nenhuma locação encontrada' %>
<% end %>